<%# Parcial que trata das mensagens de erro ao lidar com a tabela Agenda da base de dados %>

<% if @agenda.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@agenda.errors.count, "error") %>.
    </div>
    <ul>
    <% @agenda.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

