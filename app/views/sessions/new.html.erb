<% provide(:title, "Sign in") %>
<h1 style="margin-top: 50px">Sign in</h1>

<div class="row" id="rowLogin">
  <div class="span3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
        <br>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>

